<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/box_of_row"
    android:layout_height="@dimen/dp_56"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/dp_6"
    android:paddingStart="@dimen/dp_6"
    android:background="@drawable/button_border_bottom_cccccc">
    <!-- 개인, 그룹랭킹 1,2,3위 row -->
    <LinearLayout
        android:layout_width="42dp"
        android:gravity="center|center_vertical"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/icon_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ran_num1" />
        <TextView
            android:id="@+id/txt_kosw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="계단왕"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold"
            android:visibility="gone"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center"
            android:text="하록선장"
            android:textColor="@color/color_1a1a1a"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_depart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center"
            android:text="디자인"
            android:textColor="@color/color_1a1a1a"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:text="50,000F"
        android:textColor="@color/color_1a1a1a"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />
</LinearLayout>
