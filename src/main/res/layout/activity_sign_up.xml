    <kr.co.photointerior.kosw.widget.KoswTextView
        android:id="@+id/input_warn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:text="@string/warn_account_invalid"
        android:textColor="@color/color_f75e5e"
        android:textSize="@dimen/sp_12"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_signup" />

    <RelativeLayout
        android:id="@+id/box_signup_guide"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/input_warn"
        app:layout_constraintTop_toBottomOf="@+id/input_warn">

        <kr.co.photointerior.kosw.widget.KoswTextView
            android:id="@+id/btn_provision_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="6dp"
            android:gravity="bottom"
            android:text="@string/txt_provision_view"
            android:textColor="@color/text_btn_click"
            android:textSize="@dimen/sp_14" />

        <kr.co.photointerior.kosw.widget.KoswTextView
            android:id="@+id/check_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_provision_view"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="0dp"
            android:paddingTop="5dp"
            android:text="@string/txt_provision_agree"
            android:textColor="@color/color_545454"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/check_agree"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="220dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_border_545454_2dp" />

        <ImageView
            android:id="@+id/check_provision_view"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_below="@+id/check_agree"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/ic_check"
            android:visibility="invisible" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_top_arrow" />
</android.support.constraint.ConstraintLayout>