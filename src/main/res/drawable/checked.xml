                    <stroke
                        android:width="0.5dp"
                        android:color="#777" />
                    <gradient
                        android:startColor="#fff"
                        android:centerColor="#000"
                        android:endColor="#fff"
                        android:angle="270" />
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>

